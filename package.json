{
  "name": "git-watch-node",
  "version": "1.0.1",
  "main": "index.js",
  "license": "MIT",
  "keywords": [
    "git",
    "node",
    "watch"
  ],
  "bin": {
    "git-watch-node": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "start": "node dist",
    "watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "homepage": "https://github.com/jmakGH/git-watch-node",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmakGH/git-watch-node"
  },
  "engines": {
    "node": ">=8.10"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "date-fns": "^2.19.0",
    "simple-git": "^2.36.1",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.32",
    "@types/yargs": "^16.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
